    <div class="row">
        <div class="col-lg-12 mb-4">
            <div class="card shadow mb-4 border-bottom-success ">
                <div class="card-body classroom-background-container" style="background-image:url(../../Images/course-3.jpg)">
                    <div class="classroom-background-mask">
                        <h1 class="text-white font-weight-bold text-gray-100 " id="classroomName"></h1>

                        <h6 class="mb-0 font-weight-bold" id="classroomDescription"></h6>

                        <p class="text mr-3  text-white" id="classroomCreationDate"></p>
                        <span class="badge badge-pill badge-light" id="successbadge" style="display:none">Joined Successfully</span>
                        <span><a class="btn btn-outline-danger custom-green text-white font-weight-bold" href="@ViewBag.ReturnUrl">Join now</a></span>
                        
                    </div>
                </div>
            </div>
        </div>

    </div>

